<div class="container">
  <h1>Edit post</h1>
  <form action="/post_updated" method="post" name="edit-post-form">

    <% categories.each do |category| %>
      <li>
        <% checked = category.id == @post.category_id ? "checked" : nil %>
        <input type="radio" name="category_id" value="<%= category.id %>" 
          <%= checked %>> <%= category.name %>
      </li>
    <% end %>
    
    <input type="hidden" name="id" value="<%= @post.id %>">

    <li>
      Title: 
      <input type="text" name="title" value="<%= @post.title %>">
    </li>

    <li>Description: 
      <textarea rows="10", cols="50", name="description"><%= @post.description %></textarea>
    </li>

    <li>Price: 
      <input type="text" name="price" value="<%= @post.price %>">
    </li>

    <li>Email: 
      <input type="text" name="email" value="<%= @post.email %>">
    </li>

    <li>
      <input type="submit" value="Submit!">
    </li>
  </form>
  <form action="/delete" method="post" >
    <input type="hidden" name="secret_url" value="<%= @post.secret_url %>">
    <input type="submit" value="Delete post">
  </form>
</div>

